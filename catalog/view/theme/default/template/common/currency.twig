{% if currencies|length > 1 %}

<form class="currency list-inline-item" action="{{ action }}" method="post" enctype="multipart/form-data" id="form-currency">
	<div class="btn-group dropdown">
		<button class="dropdown-toggle" data-toggle="dropdown">
			{% for currency in currencies %}
				{% if currency.symbol_left and currency.code == code %} 
					{{ currency.symbol_left }} {{ currency.title }} 
				{% elseif currency.symbol_right and currency.code == code %}
					{{ currency.symbol_right }} {{ currency.title }}
				{% endif %}
			{% endfor %} 
			    <i class="fa fa-angle-down"></i>
		</button>
		<ul class="dropdown-menu dropdown-menu-left">
			{% for currency in currencies %}
				{% if currency.symbol_left %}
					<li>
						<button class="currency-item" type="button" name="{{ currency.code }}">{{ currency.symbol_left }} {{ currency.title }}</button>
					</li>
				{% else %}
					<li>
						<button class="currency-item" type="button" name="{{ currency.code }}">{{ currency.symbol_right }} {{ currency.title }}</button>
					</li>
				{% endif %}
			{% endfor %}
		</ul>
	</div>
	<input type="hidden" name="code" value="" />
	<input type="hidden" name="redirect" value="{{ redirect }}" />
</form>

{% endif %} 